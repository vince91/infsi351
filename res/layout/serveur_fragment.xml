<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="center"
    style="@style/background" >
    
    <TextView android:id="@+id/serveur_message"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:text="@string/serveur_message" 
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	style="@style/red"/>
    <TextView android:id="@+id/serveur_operation_message"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:text="@string/serveur_operation_message" 
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	style="@style/green"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <Button 
       		android:id="@+id/button_eau"
        	android:layout_width="150dp"
        	android:layout_height="150dp"
        	android:layout_marginBottom="10dp"
        	android:layout_marginLeft="40dp"
        	android:layout_marginRight="20dp"
        	android:layout_marginTop="10dp" 
        	android:layout_gravity="center_vertical"
        	android:layout_weight="1"
        	android:text="@string/button_eau"
			android:drawableTop="@drawable/icon_caraffe"  /> 
	
		<Button 
        	android:id="@+id/button_pain"
        	android:layout_width="150dp"
        	android:layout_height="150dp"
        	android:layout_marginBottom="10dp"
        	android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:layout_marginTop="10dp" 
        	android:layout_gravity="center_vertical"
        	android:layout_weight="1"
       		android:text="@string/button_pain"
        	android:drawableTop="@drawable/icon_bread" />
	
        <Button 
        	android:id="@+id/button_serveur"
        	android:layout_width="150dp"
        	android:layout_height="150dp"
        	android:layout_marginBottom="10dp"
        	android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:layout_marginTop="10dp" 
        	android:layout_gravity="center_vertical"
        	android:layout_weight="1"
        	android:text="@string/button_serveur"
        	android:drawableTop="@drawable/icon_serveur"/>
        
        <Button 
        	android:id="@+id/button_toilettes"
       		android:layout_width="150dp"
        	android:layout_height="150dp"
        	android:layout_marginBottom="10dp"
        	android:layout_marginLeft="20dp"
        	android:layout_marginRight="40dp"
        	android:layout_marginTop="10dp" 
        	android:layout_gravity="center_vertical"
        	android:layout_weight="1"
        	android:text="@string/button_toilettes"
        	android:drawableTop="@drawable/icon_toilettes"/>
        </LinearLayout>
        
     

    
</LinearLayout>