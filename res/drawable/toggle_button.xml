<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_checked="true" >
    <shape>
      <solid
          android:color="@color/background" />
      <stroke
          android:width="2dp"
          android:color="@color/beige" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item android:state_checked="false">
    <shape>
      <solid
          android:color="@color/beige" />
      <stroke
          android:width="2dp"
          android:color="@color/background" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>